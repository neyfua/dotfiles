[global]
    width = 350
    offset = 7x7
    origin = bottom-right
    
    progress_bar_min_width = 380
    progress_bar_max_width = 400
    progress_bar_corner_radius = 5

    padding = 15
    horizontal_padding = 15
    text_icon_padding = 15
    frame_width = 2
    gap_size = 10
    font = "Lilex Nerd Font 14"

    browser = /usr/bin/xdg-open
    history_length = 20
    ignore_dbusclose = false
    sticky_history = yes
    show_indicators = yes
    indicate_hidden = yes

    vertical_alignment = center

    icon_theme = "Papirus"
    min_icon_size = 32
    max_icon_size = 64
    enable_recursive_icon_lookup = true
    corner_radius = 0

    background = "#191724"
    foreground = "#e0def4"

[urgency_low]
    background = "#191724"
    highlight = "#31748f"
    frame_color = "#ebbcba"
    format = "<b><span foreground='#ebbcba'>%s</span></b>\n%b"
    timeout = 4
    default_icon = dialog-information

[urgency_normal]
    background = "#191724"
    highlight = "#f6c177"
    frame_color = "#c4a7e7"
    format = "<b><span foreground='#c4a7e7'>%s</span></b>\n%b"
    timeout = 7
    default_icon = dialog-information

[urgency_critical]
    background = "#191724"
    highlight = "#eb6f92"
    frame_color = "#eb6f92"
    format = "<b><span foreground='#eb6f92'>%s</span></b>\n%b"
    timeout = 0
    override_pause_level = 60
    default_icon = dialog-warning
