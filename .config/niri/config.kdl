input {
  keyboard {
    xkb {
      layout "us"
    }
    repeat-delay 200
    repeat-rate 40
    // numlock
    }

    touchpad {
      // off
      tap
      dwt
      // dwtp
      // drag false
      // drag-lock
      natural-scroll
      accel-speed 0.5
      accel-profile "flat"
      scroll-factor 1.3
      scroll-method "two-finger"
      // scroll-button 273
      // tap-button-map "left-middle-right"
      // click-method "clickfinger"
      // left-handed
      // disabled-on-external-mouse
      // middle-emulation
    }

    mouse {
      // off
      // natural-scroll
      accel-speed 0.0
      accel-profile "flat"
      scroll-factor 1.2
      // scroll-method "no-scroll"
      // scroll-button 273
      // left-handed
      // middle-emulation
    }
}

output "eDP-1" {
  // off
  mode "1920x1080"
  scale 1.0
  transform "normal"
  // position x=1280 y=0
  variable-refresh-rate on-demand=true
}

layout {
  gaps 10
  center-focused-column "never"
  preset-column-widths {
    proportion 0.25
    // proportion 0.33333
    proportion 0.5
    // proportion 0.66667
    proportion 0.75
    proportion 1.0

    // fixed 1920
    }

    // preset-window-heights { }
    default-column-width { proportion 0.5; }
    focus-ring {
      off
      // width 3
      // active-color "#c4a7e7"
      // inactive-color "#191724"
      // active-gradient from="#80c8ff" to="#bbddff" angle=45
      // inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }

    border {
      // off
      width 3
      active-color "#c4a7e7"
      inactive-color "#191724"
      urgent-color "#eb6f92"
      // active-gradient from="#ffbb66" to="#ffc880" angle=45 relative-to="workspace-view"
      // inactive-gradient from="#505050" to="#808080" angle=45 relative-to="workspace-view"
    }

    shadow {
      on
      draw-behind-window true
      softness 40
      spread 1
      offset x=0 y=0
      color "#0007"
    }

    background-color "transparent"
}

spawn-at-startup "dbus-update-activation-environment" "--systemd" "--all"
spawn-at-startup "waybar"
spawn-at-startup "swaybg" "-i" "/home/neifua/Pictures/Wallpapers/MC_snow.jpg"
spawn-at-startup "dunst"
spawn-at-startup "sh" "/home/neifua/.config/swayidle/autolock.sh"
spawn-at-startup "/usr/libexec/polkit-gnome-authentication-agent-1"
spawn-at-startup "swayosd-server"

prefer-no-csd

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

environment {
  GTK_THEME "Rosepine-Dark"
  QT_QPA_PLATFORM "wayland"
  SDL_VIDEODRIVER "wayland"
  CLUTTER_BACKEND "wayland"
  ELECTRON_OZONE_PLATFORM_HINT "auto"
}

cursor {
  xcursor-theme "Adwaita"
  xcursor-size 24
  hide-when-typing
}

overview {
  zoom 0.7
  backdrop-color "#191724"
  workspace-shadow {
    // off
    softness 40
    spread 10
    offset x=0 y=0
    color "#0007"
  }
}

clipboard {
    disable-primary
}

gestures {
    dnd-edge-view-scroll {
        trigger-width 10
        max-speed 2000
    }

    hot-corners {
        off
    }
}

hotkey-overlay {
    skip-at-startup
}

animations {
    // off
    slowdown 0.6
  }

// window-rule {
//   match app-id="foot"
//   default-column-width { proportion 0.5; }
//   open-floating true
// }

window-rule {
  match app-id="xdg-desktop-portal-gtk"
  default-column-width { proportion 0.6; }
  default-window-height { proportion 0.65; }
  open-floating true
}

window-rule {
  geometry-corner-radius 0
  clip-to-geometry true
  tiled-state true
  baba-is-float false
}

window-rule {
  match app-id="org.gnome.Calculator"
  open-floating true
}

// window-rule {
//   match app-id="mpv"
//   default-column-width { proportion 1.0; }
//   default-window-height { proportion 1.0; }
// }

window-rule {
  match app-id="zen"
  // match app-id="Spotify"
  match app-id="vesktop"
  match app-id="org.telegram.desktop"
  match app-id="com.obsproject.Studio"
  default-column-width { proportion 1.0; }
}

window-rule {
  match app-id="org.telegram.desktop" title="Media viewer"
  open-fullscreen false
  open-floating true
  default-column-width { proportion 0.8; }
  default-window-height { proportion 0.8; }
}

layer-rule {
  match namespace="rofi"
  match namespace="waybar"
  shadow {
    on
    draw-behind-window true
    softness 40
    spread 1
    offset x=0 y=0
    color "#0007"
    }
}

layer-rule {
    match namespace="^quickshell-overview$"
    place-within-backdrop true
}

binds {
