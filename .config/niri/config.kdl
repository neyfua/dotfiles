    // XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "set" "5%-"; }

    XF86AudioRaiseVolume  allow-when-locked=true { spawn-sh "swayosd-client --output-volume +2 --max-volume 150"; }
    XF86AudioLowerVolume  allow-when-locked=true { spawn-sh "swayosd-client --output-volume -2 --max-volume 150"; }
    XF86AudioMute         allow-when-locked=true { spawn-sh "swayosd-client --output-volume mute-toggle"; }
    XF86AudioMicMute      allow-when-locked=true { spawn-sh "swayosd-client --input-volume mute-toggle"; }
    XF86MonBrightnessUp   allow-when-locked=true { spawn-sh "swayosd-client --brightness +5"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn-sh "swayosd-client --brightness -5"; }

