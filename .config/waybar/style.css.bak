* {
  font-family: "Poppins";
  border: none;
  text-shadow: none;
  box-shadow: none;
  border-radius: 0;
  font-weight: 400;
}

window#waybar {
  background-color: #191724;
  color: #e0def4;
  padding: 0 5px;
  /* transition-property: background-color; */
  /* transition-duration: 0.5s; */
}

#window {
  background-color: #191724;
  color: #e0def4;
  margin-top: -1px;
}

#workspaces {
  border-radius: 10px;
}

#workspaces button {
  /* padding: 0px 20px 0px 20px; */
  min-width: 0px;
  font-size: 17;
  color: #524f67;
  background-color: #1f1d2e;
  border-top: 3px solid #403d52;
  /* transition-property: border-color; */
  /* transition-duration: 250ms; */
}

#workspaces button.focused {
  font-weight: bold;
  /* padding: 0px 20px 0px 20px; */
  font-size: 17;
  color: #e0def4;
  border-radius: 0px;
  border-top: 3px solid #c4a7e7;
}

#tray {
  color: #e0def4;
  background-color: #26233a;
  padding: 0px 10px;
  margin-top: 6px;
  margin-bottom: 7px;
  margin-left: 10px;
  border-radius: 10px;
  border-width: 0px;
}

#battery,
#backlight,
#pulseaudio,
#cpu,
#memory,
#network,
#bluetooth {
  background-color: #26233a;
  font-family: "Lilex Nerd Font Propo";
  font-size: 16px;
  color: #e0def4;
  padding: 0px 10px;
  margin-top: 6px;
  margin-bottom: 7px;
}

#network {
  font-size: 18px;
  color: #e0def4;
  border-radius: 10px 0px 0px 10px;
}

#bluetooth {
  font-size: 20px;
  color: #e0def4;
  margin-right: 10px;
  margin-left: -8px;
  border-radius: 0px 10px 10px 0px;
}

#pulseaudio {
  color: #e0def4;
  border-radius: 10px 0px 0px 10px;
}

#battery {
  border-radius: 0px 10px 10px 0px;
}

#cpu {
  border-radius: 10px 0px 0px 10px;
}

#memory {
  margin-right: 10px;
  border-radius: 0px 10px 10px 0px;
}

#clock {
  font-family: "", sans-serif;
  color: #e0def4;
  font-size: 16px;
  margin-top: 3px;
  margin-bottom: 3px;
  margin-left: 10px;
  padding-right: 20px;
}

#custom-notification {
  font-family: "JetbrainsMono Nerd Font Propo";
  font-size: 23px;
  color: #e0def4;
  padding-right: 2px;
  padding-left: 13px;
  margin-top: 6px;
  margin-bottom: 5px;
  margin-right: 13px;
}

#bluetooth.connected {
  color: #9ccfd8;
}

#pulseaudio.warning,
#battery.warning {
  color: #ebbcba;
}

#pulseaudio.critical,
#battery.critical,
#battery.full {
  color: #eb6f92;
}

#battery.charging {
  color: #f6c177;
}

#bluetooth.off,
#network.disabled,
#network.disconnected,
#pulseaudio.muted,
#pulseaudio.muted.warning,
#pulseaudio.muted.critical {
  color: #6e6a86;
}
