{
  "project_panel": {
    "hide_gitignore": true
  },
  "buffer_font_features": {
    "calt": 1
  },
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "Fira Code",
  "vim_mode": true,
  "icon_theme": "Material Icon Theme",
  "base_keymap": "VSCode",
  "ui_font_size": 22.0,
  "buffer_font_size": 23.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Ros√© Pine"
  },
  "cursor_blink": true,
  "cursor_shape": "block",
  "soft_wrap": "editor_width"
}
